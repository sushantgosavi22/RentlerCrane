<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sushant.sampledemomvvmapicall">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".application.App"
        android:allowBackup="true"
        android:icon="@drawable/app_icon_news"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/app_icon_news"
        android:supportsRtl="true"
        android:theme="@style/Theme.SampleDemoMVVMAPICall"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".views.assignmentdetails.AssignmentDetailsActivity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".views.vehicaldetail.VehicleDetailActivity"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".views.rentlerdashboard.RentlerDashboard"
            android:label="@string/title_activity_rentler_dashboard"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.dashboard.ui.DashboardActivity"
            android:windowSoftInputMode="adjustResize" />
    </application>

</manifest>